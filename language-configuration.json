{
  "comments": {
    "lineComment": "//",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "colorizedBracketPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "/*",
      "close": "*/",
      "notIn": [
        "string"
      ]
    }
  ],
  "autoCloseBefore": ";:.,=}])> \n\t",
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "<",
      ">"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}\"']*$|^.*\\([^\\)\"']*$",
    "decreaseIndentPattern": "^\\s*(\\s*\\/[*].*[*]\\/\\s*)*[})]"
  },
  "folding": {
    "markers": {
      "start": "^\\s*// region:\\b",
      "end": "^\\s*// endregion\\b"
    }
  },
  "wordPattern": "((?<![\\-\\w])([a-z][0-9a-z]*|[A-Z][0-9A-Z]*)(([\\-])([a-z][0-9a-z]*|[A-Z][0-9A-Z]*))*)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*///.*$",
      "action": {
        "indent": "none",
        "appendText": "/// "
      }
    },
    {
      "beforeText": "^\\s*/\\*\\*.*$",
      "action": {
        "indent": "none",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s+\\*\\s+.*$",
      "action": {
        "indent": "outdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^(\t|  )* \\*/\\s*$",
      "action": {
        "indent": "none",
        "removeText": 1
      }
    }
  ]
}